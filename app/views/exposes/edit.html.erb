<%= form_for @expose ,method: :put, html: {class: 'form-horizontal'} do |f|%>
	<div class="form-group">
		<%= f.label :url, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.text_area :url, rows: 4, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :desc, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.text_area :desc, rows: 4, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
