<%= form_for @tao ,method: :post, html: {class: 'form-horizontal', multipart: true} do |f|%>
	<div class="form-group">
		<%= f.label :category_id, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.collection_select :category_id, TaoCategory.arrange_as_array({order: 'title'}, @tao_category.possible_parents) , :id, :name_for_selects, include_blank: true, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :title, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.text_field :title, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :price, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.number_field :price, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :baoyou, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.check_box :baoyou, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :pic, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.file_field :pic, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :url, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.text_area :url, rows: 4, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :fanli_url, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.text_area :fanli_url, rows: 4, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :desc, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.text_area :desc, rows: 4, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :content, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.text_area :content, rows: 4, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :expose_id, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.number_field :expose_id, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :position, class: 'col-md-2 control-label' %>
		<div class="col-md-8">
			<%= f.number_field :position, class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
